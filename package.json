{
    "name": "@guardian/dotcom-rendering",
    "version": "0.1.0-alpha",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "yarn tslint --project tsconfig.json -p . -t stylish",
        "tsc": "tsc",
        "test": "jest",
        "postinstall": "./scripts/git-hooks/install.js"
    },
    "bundlesize": [
        {
            "path": "./dist/frontend.article.*.js",
            "maxSize": "50 kB"
        },
        {
            "path": "./dist/vendor.*.js",
            "maxSize": "70 kB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.0.0",
        "@emotion/babel-preset-css-prop": "^10.0.7",
        "@types/jest": "^23.3.5",
        "@types/lodash.clonedeep": "^4.5.4",
        "@types/react-test-renderer": "^16.0.3",
        "@types/webpack": "^4.4.11",
        "@types/webpack-env": "^1.13.6",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.0",
        "babel-plugin-dynamic-import-node": "^1.2.0",
        "babel-plugin-module-resolver": "^3.1.1",
        "babel-plugin-preval": "^3.0.0",
        "bundlesize": "^0.17.0",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "jest": "^23.6.0",
        "jest-dom": "^2.1.0",
        "jest-teamcity-reporter": "^0.9.0",
        "lodash.clonedeep": "^4.5.0",
        "node-fetch": "^2.2.1",
        "prettier": "^1.7.4",
        "react-testing-library": "^5.2.3",
        "regenerator-runtime": "^0.12.1",
        "rimraf": "^2.6.2",
        "simple-progress-webpack-plugin": "^1.1.2",
        "string-replace-loader": "^2.1.1",
        "stylelint": "^9.5.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.3.2",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^1.3.0",
        "tslint-react": "^3.6.0",
        "tslint-react-a11y": "^1.0.0",
        "typescript": "^3.3.3",
        "webpack": "^4.5.0",
        "webpack-assets-manifest": "^3.0.1",
        "webpack-bundle-analyzer": "^2.11.1",
        "webpack-cli": "^3.1.1",
        "webpack-dev-middleware": "^3.1.2",
        "webpack-hot-middleware": "^2.22.0",
        "webpack-hot-server-middleware": "^0.5.0",
        "webpack-merge": "^4.1.2",
        "webpack-node-externals": "^1.7.2",
        "webpack-sources": "^1.1.0"
    },
    "dependencies": {
        "chalk": "^2.4.0",
        "columnify": "^1.5.4",
        "cpy": "^6.0.0",
        "execa": "^0.10.0",
        "filesizegzip": "^2.0.0",
        "inquirer": "^5.2.0",
        "pretty-bytes": "^4.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "diagnostics": false,
                "tsConfigFile": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/*.test.+(ts|tsx|js)"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest/setup.ts",
        "moduleNameMapper": {
            "^@root(.*)$": "<rootDir>$1",
            "^@frontend(.*)$": "<rootDir>/packages/frontend$1",
            "^svgs/(.*)$": "<rootDir>/__mocks__/svgMock.tsx",
            "^(.*)\\.svg$": "<rootDir>/__mocks__/svgMock.tsx"
        },
        "testResultsProcessor": "jest-teamcity-reporter",
        "collectCoverageFrom": [
            "packages/**/*.{ts,tsx}"
        ]
    }
}
